extends ../layout.pug

block head
    title Home
    meta(name="description" content="Home")

block content

    if errors && errors.form && errors.form.signup
        ul
            each error in errors.form.signup
                li #{error.message}

    form(method='POST' action='/user/sign-up/')
        div.form-group
            label(for='sign-up-email') Email:
            input#sign-up-email.form-control(type='email' placeholder='name@email.com' name='email')
        div.form-group
            label(for='sign-up-password') Password:
            input#sign-up-password.form-control(type='password' name='password')
        div.form-group
            label(for='sign-up-password-repeat') Password:
            input#sign-up-password-repeat.form-control(type='password' name='passwordRepeat')
        button.btn.btn-primary(type='submit') Sign up

    form(method='POST' action='/user/sign-in/')
        div.form-group
            label(for='sign-in-email') Email:
            input#sign-in-email.form-control(type='email' placeholder='name@email.com' name='email')
        div.form-group
            label(for='sign-in-password') Password:
            input#sign-in-password.form-control(type='password' name='password')
        button.btn.btn-primary(type='submit') Sign in
